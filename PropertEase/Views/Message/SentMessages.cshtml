@using Application.Interfaces
@using Application
@inject IUserService userService
@model IEnumerable<Message>

@{
    ViewData["Title"] = "Sent Messages";
}

<body>
  <div class="container my-5">
      <style>
    body {
      background-color: #EEF2F6;
      color: #020617;
      font-family: 'Poppins Regular';
    }

    h2 {
      font-family: 'PP Hatton medium';
    }

    .list-group-item.active {
      background-color: #EA580C;
      border-color: #EA580C;
      color: white;
    }

    .list-group-item:hover {
      background-color: #FED7AA;
      cursor: pointer;
    }

    .container {
      margin-top: 30px;
    }

    a {
      text-decoration: none;
    }

    .list-group {
      margin-top: 30px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .list-group-item {
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 10px;
      transition: all 0.3s ease;
    }

    .list-group-item:hover {
      transform: scale(1.03);
    }

    .list-group-item.active {
      background-color: #EA580C;
      border-color: #EA580C;
      font-weight: bold;
    }

    .message-card {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 10px;
      padding: 20px;
      transition: all 0.3s ease;
    }

    .message-card:hover {
      transform: scale(1.03);
    }

    .message-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .message-header h5 {
      font-size: 1.1rem;
      color: #333;
    }

    .message-header small {
      font-size: 0.85rem;
      color: #666;
    }

    .message-body p {
      font-size: 0.95rem;
      color: #444;
      margin-top: 10px;
    }

    .message-footer {
      text-align: right;
      font-size: 0.9rem;
      color: #EA580C;
      font-weight: bold;
      margin-top: 10px;
    }

      .list-group-item {
        padding: 10px;
      }

      .message-card {
        padding: 15px;
      }
    }
  </style>
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
                    <a href="/Message/ReceivedMessages" class="list-group-item list-group-item-action">Inbox</a>
                    <a href="/Message/SentMessages" class="list-group-item list-group-item-action active">Sent Messages</a>
        </div>
      </div>

      <div class="col-md-9">
        <h2 class="mb-4">Sent Messages</h2>
        @if (Model != null && Model.Any())
        {
            foreach (var message in Model)
            {
                <div class="message-card">
                        <div class="message-header">
                                <h5 class="mb-1">To: @((await userService.GetByIdAsync(message.RecipientId)).FullName)</h5>
                            <small>@message.SentTime.ToString("g")</small>
                        </div>
                        <div class="message-body">
                            <p>@message.Content</p>
                        </div>
                </div>
            }
        }
        else
        {
            <p>No sent messages found.</p>
        }
      </div>
    </div>
  </div>
</body>

