@using Application.Interfaces
@using Domain.Entities
@inject ICategoryService categoryService
@model IEnumerable<Property>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
    ViewData["Title"] = "All Properties | PropertEase";
}

<div class="main-content">
    <style>
        .main-content {
            margin-left: 260px; 
            padding: 20px;
            background-color: #fff5f0; 
            min-height: 100vh;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .dashboard-title {
            font-family: 'PP Hatton medium', sans-serif;
            font-size: 1.8rem;
            color: #EA580C; /* Highlighted theme color */
            border-bottom: 2px solid #EA580C;
            padding-bottom: 8px;
            margin-bottom: 20px;
        }

        .table {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
                padding: 10px;
            }

            .table th {
                background-color: #EA580C;
                color: #fff;
                font-weight: bold;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #fff7e6;
        }

        .table-hover tbody tr:hover {
            background-color: #fed7aa; /* Hover effect for rows */
        }

        .btn-danger {
            background-color: #EA580C;
            border-color: #EA580C;
            color: #fff;
            font-weight: bold;
            padding: 5px 10px;
        }

            .btn-danger:hover {
                background-color: #c6510a; /* Darker on hover */
                border-color: #c6510a;
            }

        .table-responsive {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-top: 20px;
        }

    </style>
    <h2 class="dashboard-title mb-4">All Properties</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Seller</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model)
                {
                    <tr>
                        <td>@property.PropertyId</td>
                        <td>@property.SellerId</td>
                        <td>@property.Title</td>
                        <td>@((await categoryService.GetByIdAsync(property.Category.CategoryId)).Name)</td>
                        <td>@property.Price</td>
                        <td>
                            <form action="@Url.Action("DeleteProperty", "Admin", new {id = property.PropertyId})" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@property.PropertyId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
