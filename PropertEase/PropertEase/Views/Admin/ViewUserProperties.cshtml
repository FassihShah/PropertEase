@model IEnumerable<Property>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
    ViewData["Title"] = "User Properties | PropertEase";
}

<div class="main-content">
    <style>
        .main-content {
            margin-left: 260px; 
            padding: 20px;
            background-color: #fff5f0; 
            min-height: 100vh; 
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .dashboard-title {
            font-family: 'PP Hatton medium', sans-serif;
            font-size: 1.8rem;
            color: #EA580C;
            border-bottom: 2px solid #EA580C;
            padding-bottom: 8px;
            margin-bottom: 20px;
        }

        .table {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            padding: 10px;
        }

        .table th {
            background-color: #EA580C;
            color: #fff;
            font-weight: bold;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #fff7e6;
        }

        .table-hover tbody tr:hover {
            background-color: #fed7aa; /* Row hover effect */
        }

        .btn-info {
            background-color: #0284c7;
            border-color: #0284c7;
            color: #fff;
            font-weight: bold;
        }

        .btn-info:hover {
            background-color: #0369a1; /* Darker hover */
            border-color: #0369a1;
        }

        .btn-danger {
            background-color: #EA580C;
            border-color: #EA580C;
            color: #fff;
            font-weight: bold;
        }

        .btn-danger:hover {
            background-color: #c6510a; /* Darker hover */
            border-color: #c6510a;
        }

        .btn-primary {
            background-color: #34d399;
            border-color: #34d399;
            color: #fff;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #059669; /* Darker hover */
            border-color: #059669;
        }
    </style>

    <h2 class="dashboard-title mb-4">User# @Model.First().SellerId Properties</h2>

    <!-- Properties Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Size</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model)
                {
                    <tr>
                        <td>@property.PropertyId</td>
                        <td>@property.Title</td>
                        <td>@property.PropertyType.Name</td>
                        <td>@property.Size</td>
                        <td>
                            <!-- Delete Property Button -->
                            <form action="@Url.Action("DeleteProperty", "Admin")" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@property.PropertyId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Button to View All Properties -->
    <div class="mt-4">
        <form action="@Url.Action("AllProperties", "Admin")" method="get">
            <button type="submit" class="btn btn-primary">View All Properties</button>
        </form>
    </div>
</div>
