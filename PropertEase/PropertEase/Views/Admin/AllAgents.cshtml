@using Application.Interfaces
@using Application
@inject IPropertyService propertyService
@model IEnumerable<UserDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "All Agents | PropertEase";
}

<div class="main-content">
    <style>
        .main-content {
            margin-left: 260px;
            padding: 20px;
            background-color: #fff5f0;
            min-height: 100vh;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .dashboard-title {
            font-family: 'PP Hatton medium', sans-serif;
            font-size: 1.8rem;
            color: #EA580C;
            border-bottom: 2px solid #EA580C;
            padding-bottom: 8px;
            margin-bottom: 20px;
        }

        .table {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
                padding: 10px;
            }

            .table th {
                background-color: #EA580C;
                color: #fff;
                font-weight: bold;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #fff7e6;
        }

        .table-hover tbody tr:hover {
            background-color: #fed7aa;
        }

        .btn-info {
            background-color: #0284c7;
            border-color: #0284c7;
            color: #fff;
            font-weight: bold;
        }

            .btn-info:hover {
                background-color: #0369a1;
                border-color: #0369a1;
            }

        .btn-danger {
            background-color: #EA580C;
            border-color: #EA580C;
            color: #fff;
            font-weight: bold;
        }

            .btn-danger:hover {
                background-color: #c6510a;
                border-color: #c6510a;
            }
    </style>

    <h2 class="dashboard-title mb-4">All Agents</h2>

    <!-- Agents Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Agency Name</th>
                    <th>License Number</th>
                    <th>No. of Properties</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agent in Model)
                {
                    <tr>
                        <td>@agent.Id</td>
                        <td>@agent.FullName</td>
                        <td>@agent.Email</td>
                        <td>@agent.AgencyName</td> 
                        <td>@agent.AgentLicenseNumber</td> 
                        <td>@((await propertyService.GetBySellerIdAsync(agent.Id)).Count())</td>
                        <td>
                            <form action="@Url.Action("ViewUserProperties", "Admin")" method="get" style="display:inline;">
                                <input type="hidden" name="userId" value="@agent.Id" />
                                <button type="submit" class="btn btn-info btn-sm mb-1">Properties</button>
                            </form>
                            <form action="@Url.Action("DeleteUser", "Admin")" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@agent.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
