@model List<Property>
@{
	ViewData["Title"] = "Properties";
}

<body>
	<section class="container my-5">
		<style>
			body {
				font-family: 'Poppins Regular';
				background-color: #EEF2F6;
			}

			h2 {
				font-weight: 600;
				color: #020617;
				font-family: 'PP Hatton medium';
			}

			.property-card {
				background-color: #fff;
				border: 1px solid #ccc;
				border-radius: 8px;
				overflow: hidden;
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
				transition: transform 0.3s;
				height: 400px;
				display: flex;
				flex-direction: column;
				justify-content: space-between;
			}

				.property-card img {
					width: 100%;
					height: 180px;
					object-fit: cover;
				}

				.property-card:hover {
					transform: translateY(-5px);
				}

			.property-info {
				padding: 10px;
				flex-grow: 1;
			}

				.property-info h5 {
					font-size: 1.25rem;
					color: #EA580C;
					margin-left: 60px;
				}

				.property-info p {
					margin: 0;
					color: #000000;
					font-size: 0.95rem;
				}

			.btn-view {
				display: inline-block;
				margin: 10px auto;
				text-decoration: none;
				background-color: #EA580C;
				color: #fff;
				padding: 12px 12px;
				border-radius: 5px;
				transition: background-color 0.3s;
			}

				.btn-view:hover {
					background-color: #FED7AA;
					color: #020617;
				}

			.label {
				font-weight: 1000;
			}

			.form-control {
				display: inline;
			}

			.filters-section {
				position: sticky;
				top: 20px;
				z-index: 100;
			}
		</style>
		<div class="row">
			<div class="col-md-3 filters-section">
				<h5 style="font-family:'PP Hatton medium'">Filter By</h5>
				<form id="filter-form">
					<div class="mb-3">
						<label for="City" class="form-label">Property Type</label>
						<select id="City" name="City" class="form-select">
							<option value="">Select City</option>
							@foreach (var city in ViewBag.Cities as List<string>)
							{
								<option value="@city">@city</option>
							}
						</select>
					</div>
					<div class="mb-3">
						<label for="PropertyType">Property Type</label>
						<select name="PropertyType" class="form-select">
							<option value="">Select Property Type</option>
							@foreach (var type in ViewBag.Types as List<string>)
							{
								<option value="@type">@type</option>
							}
						</select>
					</div>
					<div class="mb-3">
						<label for="Category">Category</label>
						<select name="Category" class="form-select">
							<option value="">Select Category</option>
							@foreach (var category in ViewBag.Categories as List<string>)
							{
								<option value="@category">@category</option>
							}
						</select>
					</div>
					<div class="mb-3">
						<label for="Purpose">Purpose</label>
						<select name="Purpose" class="form-select">
							<option value="">Select Purpose</option>
							@foreach (var purpose in ViewBag.Purposes as List<string>)
							{
								<option value="@purpose">@purpose</option>
							}
						</select>
					</div>
					<div class="mb-3">
						<div class="row">
							<div class="col-md-6">
								<label for="MinSize">Min Size</label>
								<input name="MinSize" class="form-control" type="number" min="0" />
							</div>
							<div class="col-md-6">
								<label for="MaxSize">Max Size</label>
								<input name="MaxSize" class="form-control" type="number" min="0" />
							</div>
						</div>
					</div>
					<div class="mb-3">
						<div class="row">
							<div class="col-md-6">
								<label for="MinPrice">Min Price</label>
								<input name="MinPrice" class="form-control" type="number" min="0" />
							</div>
							<div class="col-md-6">
								<label for="MaxPrice">Max Price</label>
								<input name="MaxPrice" class="form-control" type="number" min="0" />
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-primary w-100" style="background-color: #EA580C; border: none;">
						Apply
						Filters
					</button>
				</form>
			</div>

			<div class="col-md-9">
				<h2 class="mb-4">Available Properties</h2>
				<div id="property-container">
					@Html.Partial("~/Views/Shared/_PropertiesList.cshtml", Model)
				</div>
			</div>
		</div>
	</section>
	<nav aria-label="Page navigation example">
		<ul class="pagination justify-content-center mt-2 mt-lg-4">
			<li class="page-item">
				<a class="page-link" href="#" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
				</a>
			</li>
			<li class="page-item"><a class="page-link" href="#">1</a></li>
			<li class="page-item"><a class="page-link" href="#">2</a></li>
			<li class="page-item"><a class="page-link" href="#">3</a></li>
			<li class="page-item">
				<a class="page-link" href="#" aria-label="Next">
					<span aria-hidden="true">&raquo;</span>
				</a>
			</li>
		</ul>
	</nav>
	@section Scripts {
		<script>
			$(document).ready(function () {
				$("form").on("submit", function (e) {
					e.preventDefault();

					const url = '@Url.Action("PropertiesList", "Search")';
					const data = $(this).serialize();

					$.get(url, data, function (response) {
						$("#property-container").html(response); 
					}).fail(function () {
						alert("Error loading properties. Please try again.");
					});
				});
			});
		</script>
	}


</body>