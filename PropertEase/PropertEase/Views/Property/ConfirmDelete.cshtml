@using Application.Interfaces
@inject ILocationService locationService
@model Property

@{
	ViewData["Title"] = "Confirm Delete";
}

<body>
	<div class="container">
		<style>
			body {
				background-color: #EEF2F6;
				font-family: 'Poppins Regular', sans-serif;
				color: #020617;
			}

			.form-container {
				margin: 150px auto;
				max-width: 600px;
				background: #FFF;
				padding: 30px;
				border-radius: 15px;
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			}

				.form-container h1 {
					font-family: 'PP Hatton bold', sans-serif;
					color: #EA580C;
					font-size: 2rem;
					margin-bottom: 20px;
				}

			.card {
				border: 1px solid #FED7AA;
				border-radius: 10px;
				margin-bottom: 20px;
			}

			.card-header {
				background-color: #FED7AA;
				color: #020617;
				font-weight: bold;
				font-size: 1.2rem;
			}

			.btn-custom {
				background-color: #EA580C;
				color: #FFFFFF;
				border: none;
				border-radius: 10px;
				padding: 10px 20px;
				font-size: 1.2rem;
				transition: background-color 0.3s ease;
			}

				.btn-custom:hover {
					background-color: black;
					color: #FFFFFF;
				}
		</style>
		<div class="form-container">
			<h1>Confirm Property Deletion</h1>
			<div class="card">
				<div class="card-header">Are you sure you want to delete this property?</div>
				<div class="card-body">
					<p class="lead">Once deleted, this action cannot be undone. Please confirm your decision below.</p>
					<div class="form-group">
						<label for="propertyTitle">Property Title</label>
						<input type="text" id="propertyTitle" name="propertyTitle" class="form-control" value="@Model.Title"
							   disabled>
					</div>
					<div class="form-group">
						<label for="propertyLocation">Location</label>
						<input type="text" id="propertyLocation" name="propertyLocation" class="form-control"
							   value="@((await locationService.GetByPropertyAsync(Model.PropertyId)).ToString())" disabled>
					</div>
					<div class="form-group">
						<label for="propertyPrice">Price</label>
						<input type="text" id="propertyPrice" name="propertyPrice" class="form-control" value="@Model.Price" disabled>
					</div>
					<div class="text-center">
						<a href="@Url.Action("Delete", "Property", new { id = @Model.PropertyId })" class="btn btn-danger mt-2">Delete</a>
						<a href="@Url.Action("MyProperties", "User")" class="btn btn-secondary mt-2">Cancel</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>