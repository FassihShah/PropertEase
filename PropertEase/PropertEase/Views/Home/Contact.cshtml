@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <link rel="stylesheet" href="~/css/contact.css"/>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    <div class="form-section pt-5 ps-5 pe-5">
        <h1>Real Estate Inquiry Form</h1>
        <p>Reach out today and let us help you find your perfect property.</p>
        <form asp-action="SubmitForm" method="post" class="inquiry-form">
            <div class="form-group">
                <label for="type">Inquiry Type</label>
                <select id="type" name="type" required>
                    <option value="" disabled selected>-- Select Type --</option>
                    <option value="buying">Buying</option>
                    <option value="renting">Renting</option>
                </select>
            </div>

            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your name" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>

            <div class="form-group">
                <label for="location">Preferred Location</label>
                <select id="location" name="location" required>
                    <option value="" disabled selected>-- Choose an option --</option>
                    <option value="city">City</option>
                    <option value="suburbs">Suburbs</option>
                    <option value="rural">Rural</option>
                </select>
            </div>

            <div class="form-group inline-group">
                <div>
                    <label for="price" class="me-4">Max Price</label>
                    <input type="number" id="price" name="price" placeholder="e.g., 100000" required>
                </div>
                <div>
                    <label for="size">Min Size (sq ft)</label>
                    <input type="number" id="size" name="size" placeholder="e.g., 500" required>
                </div>
            </div>

            <button type="submit" class="btn-submit">Submit</button>
        </form>
    </div>

    <div class="image-section">
        <img src="/images/Contact.jpg" alt="House Image">
    </div>
</div>

<section class="contact-section">
    <h2>FIND OUR LOCATION</h2>
    <div class="container" style="margin-top: 50px; background-color: #EEF2F6; border: none; box-shadow: none;">
        <div class="row g-4">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="contact-card">
                    <div class="icon">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <h4>VISIT OUR OFFICE</h4>
                    <p>208 Samanabad, Lahore Pakistan </p>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="contact-card">
                    <div class="icon">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                    <h4>EMAIL US</h4>
                    <p>propertease@gmail.com</p>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="contact-card">
                    <div class="icon">
                        <i class="bi bi-telephone-fill"></i>
                    </div>
                    <h4>CALL US</h4>
                    <p>+92 315 44 72419</p>
                </div>
            </div>
        </div>
    </div>
</section>